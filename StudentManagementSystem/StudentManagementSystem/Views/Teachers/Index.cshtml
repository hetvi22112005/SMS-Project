@model List<StudentManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

@section Styles {
    <link rel="stylesheet" href="~/css/teachers.css" asp-append-version="true" />
}

<div class="container-fluid mt-4">

    <!-- Header with Search and Manage Button -->
    <div class="teacher-page-header d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Teachers</h3>

        <div class="d-flex align-items-center">
            <!-- Search Bar -->
            <form class="teacher-search me-3" method="get" asp-action="Index">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search teachers..." name="searchTerm" />
                    <button class="btn btn-teal" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <!-- Manage Button -->
            <a asp-action="Details" class="btn btn-manage-teachers">
                <i class="bi bi-plus-lg me-1"></i> Manage Teachers
            </a>
        </div>
    </div>

    <!-- Teacher Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var teacher in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="teacher-card card h-100 shadow-sm border-0">

                        <!-- Photo -->
                        <div class="text-center pt-4">
                            @if (!string.IsNullOrEmpty(teacher.Photo))
                            {
                                <img src="@Url.Content(teacher.Photo)"
                                     alt="Teacher Photo" />
                            }
                            else
                            {
                                <img src="~/images/default-user.png"
                                     alt="Default Photo" />
                            }
                        </div>

                        <!-- Body -->
                        <div class="card-body text-center">
                            <h5 class="fw-bold mb-1">@teacher.User?.FullName</h5>
                            <p class="text-muted small mb-2">@teacher.Qualification</p>
                            <span class="badge badge-department mb-2">@teacher.Department</span>

                            <div class="small text-muted mt-2">
                                <strong>@teacher.Experience</strong> years experience
                            </div>

                            @if (!string.IsNullOrEmpty(teacher.Bio))
                            {
                                <p class="small text-muted mt-2">
                                    @(teacher.Bio.Length > 80
                                                            ? teacher.Bio.Substring(0, 80) + "..."
                                                            : teacher.Bio)
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No teachers found.
                </div>
            </div>
        }
    </div>
</div>
