@using Microsoft.AspNetCore.Http
@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Add Student";
    var role = Context.Session.GetString("Role") ?? "";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .erp-card {
        border-radius: 18px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        background: #fff;
    }

    .erp-header {
        background: linear-gradient(135deg, #003b3f, #0fa4a9);
        border-radius: 18px 18px 0 0;
        height: 90px;
    }

    .erp-label {
        font-weight: 600;
        color: #003b3f;
        margin-bottom: 6px;
    }

    .erp-input,
    .erp-select {
        border-radius: 12px;
        padding: 12px 14px;
        border: 1px solid #ddd;
    }

    .btn-erp {
        background: linear-gradient(135deg, #003b3f, #0fa4a9);
        border: none;
        color: #fff;
        padding: 10px 28px;
        border-radius: 30px;
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card erp-card border-0">

                <!-- Header -->
                <div class="erp-header d-flex flex-column justify-content-center align-items-center text-white">
                    <i class="bi bi-person-plus-fill" style="font-size:32px;"></i>
                    <h6 class="mb-0 fw-semibold">Add Student</h6>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        <!-- User -->
                        <div class="mb-3">
                            <label class="erp-label">User</label>
                            <select asp-for="UserId"
                                    class="form-select erp-select"
                                    disabled="@(role != "Admin")">
                                <option value="">-- Select User --</option>
                            </select>
                        </div>

                        <!-- Course -->
                        <div class="mb-3">
                            <label class="erp-label">Course</label>
                            <select asp-for="CourseId"
                                    class="form-select erp-select"
                                    disabled="@(role != "Admin")">
                                <option value="">-- Select Course --</option>
                            </select>
                        </div>

                        <!-- Enrollment -->
                        <div class="mb-3">
                            <label class="erp-label">Enrollment No</label>
                            <input asp-for="EnrollmentNo"
                                   class="form-control erp-input"
                                   readonly="@(role != "Admin")" />
                        </div>

                        <!-- Row -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="erp-label">Semester</label>
                                <input asp-for="Semester"
                                       class="form-control erp-input"
                                       readonly="@(role != "Admin")" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="erp-label">DOB</label>
                                <input asp-for="DOB"
                                       type="date"
                                       class="form-control erp-input"
                                       readonly="@(role != "Admin")" />
                            </div>
                        </div>

                        <!-- Photo -->
                        @if (role == "Admin")
                        {
                            <div class="mb-4">
                                <label class="erp-label">Photo</label>
                                <input type="file"
                                       name="PhotoFile"
                                       class="form-control erp-input" />
                            </div>
                        }

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-3">
                            <a asp-action="Details"
                               class="btn btn-outline-secondary rounded-pill px-4">
                                Back
                            </a>

                            @if (role == "Admin")
                            {
                                <button type="submit" class="btn btn-erp">
                                    <i class="bi bi-save me-1"></i> Save Student
                                </button>
                            }
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>