@model List<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

@section Styles {
    <link rel="stylesheet" href="~/css/students.css" asp-append-version="true" />
}

<div class="container-fluid mt-4">

    <!-- Header with Search and Manage Button -->
    <div class="student-page-header d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Students</h3>
        <!-- Search Bar -->
        <form class="student-search me-3" method="get" asp-action="Index">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search students..." name="searchTerm" />
                <button class="btn btn-teal" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>

        <!-- Manage Students Button -->
        <a asp-action="Details" class="btn btn-manage-students">
            <i class="bi bi-plus-lg me-1"></i> Manage Students
        </a>
    </div>

    <!-- Student Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var student in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="student-card card h-100 shadow-sm border-0">

                        <!-- Photo -->
                        <div class="text-center pt-4">
                            @if (!string.IsNullOrEmpty(student.Photo))
                            {
                                <img src="@Url.Content(student.Photo)" alt="Student Photo" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width:90px;height:90px;">
                                    <i class="bi bi-person fs-1 text-secondary"></i>
                                </div>
                            }
                        </div>

                        <!-- Body -->
                        <div class="card-body text-center">
                            <h5 class="fw-bold mb-1">@student.User?.FullName</h5>
                            <p class="text-muted small mb-2">@student.User?.Email</p>

                            <span class="badge badge-department mb-2">@student.Course?.CourseName</span>

                            <div class="small text-muted mt-2">
                                <div>Enrollment: <strong>@student.EnrollmentNo</strong></div>
                                <div>Semester: <strong>@student.Semester</strong></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No students found.
                </div>
            </div>
        }
    </div>
</div>
