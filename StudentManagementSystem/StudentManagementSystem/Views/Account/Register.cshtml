@model StudentManagementSystem.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register | EduTrack</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#0d9488'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-teal-50 min-h-screen flex items-center justify-center px-4">

    <div class="w-full max-w-sm">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">

            <!-- Header -->
            <div class="bg-primary text-white text-center py-5">
                <i data-feather="user-plus" class="mx-auto mb-2"></i>
                <h2 class="text-xl font-semibold">Create Account</h2>
                <p class="text-sm opacity-90">Student Registration</p>
            </div>

            <!-- Form -->
            <form class="px-6 py-5 space-y-4">

                <div>
                    <label class="text-sm font-medium text-gray-700">Full Name</label>
                    <div class="relative">
                        <input type="text"
                               class="mt-1 w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"
                               placeholder="Enter full name" />
                        <i data-feather="user" class="absolute right-3 top-3 text-gray-400"></i>
                    </div>
                </div>

                <div>
                    <label class="text-sm font-medium text-gray-700">Email</label>
                    <div class="relative">
                        <input type="email"
                               class="mt-1 w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"
                               placeholder="example@gmail.com" />
                        <i data-feather="mail" class="absolute right-3 top-3 text-gray-400"></i>
                    </div>
                </div>

                <div>
                    <div class="relative">
                        <input type="password" id="password" name="password" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                               placeholder="••••••••">
                        <i data-feather="lock" class="absolute right-3 top-3 text-gray-400"></i>
                    </div>
                </div>

                <!-- Role (Fixed) -->
                <div>
                    <label class="text-sm font-medium text-gray-700">Role</label>
                    <input type="text"
                           value="Student"
                           disabled
                           class="mt-1 w-full px-3 py-2 border rounded-lg bg-gray-100 text-gray-600 cursor-not-allowed" />
                </div>

                <button type="submit"
                        class="w-full bg-primary text-white py-2.5 rounded-lg font-semibold hover:bg-teal-700 transition">
                    Create Account
                </button>

                <p class="text-center text-sm text-gray-600">
                    Already have an account?
                    <a href="/Account/Login" class="text-primary font-semibold hover:underline">
                        Login
                    </a>
                </p>

            </form>
        </div>

        <p class="text-center text-xs text-gray-500 mt-4">
            © 2026 EduTrack Student Management System
        </p>
    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>
