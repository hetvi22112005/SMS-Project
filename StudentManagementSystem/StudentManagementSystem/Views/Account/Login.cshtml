@model StudentManagementSystem.Models.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduTrack - Student Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/auth.css" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>

</head>
<body class="auth-body d-flex align-items-center justify-content-center">

    <div class="col-11 col-sm-9 col-md-6 col-lg-4">
        <div class="auth-card bg-white">

            <!-- Header -->
            <div class="auth-header">
                <div class="icon-circle">
                    <i data-feather="book-open"></i>
                </div>
                <h4 class="fw-bold mb-1">Welcome to EduTrack</h4>
                <small>Student Management Portal</small>
            </div>

            <!-- Form -->
            <div class="p-4">
                <form asp-action="Login" method="post">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <!-- Email -->
                    <label class="form-label fw-semibold text-success">Student ID / Email</label>
                    <div class="input-group auth-input-group mb-3">
                        <span class="input-group-text">
                            <i data-feather="user"></i>
                        </span>
                        <input asp-for="Email" value="@ViewBag.RememberedEmail" class="form-control auth-input" placeholder="Enter your email">
                    </div>

                    <!-- Password -->
                    <label class="form-label fw-semibold text-success">Password</label>
                    <div class="input-group auth-input-group mb-3">
                        <span class="input-group-text">
                            <i data-feather="lock"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control auth-input" placeholder="Enter your password">
                        <span class="input-group-text auth-eye">
                            <i data-feather="eye"></i>
                        </span>
                    </div>

                    <!-- Remember + Forgot -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="RememberMe">
                            <label class="form-check-label">Remember me</label>
                        </div>
                        <a asp-action="ForgotPassword" class="text-success text-decoration-none">
                            Forgot password?
                        </a>
                    </div>

                    <!-- Button -->
                    <button class="btn auth-btn w-100">
                        Sign In <i data-feather="log-in" class="ms-2"></i>
                    </button>

                    <!-- Register -->
                    <p class="text-center mt-4 mb-0">
                        New student?
                        <a href="/Account/Register" class="text-success fw-semibold text-decoration-none">
                            Register here
                        </a>
                    </p>
                </form>
            </div>
        </div>

        <p class="text-center text-success small mt-3">
            © 2026 EduTrack Student Management System
        </p>
    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>
