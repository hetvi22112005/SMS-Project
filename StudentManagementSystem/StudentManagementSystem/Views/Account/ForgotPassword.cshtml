@model StudentManagementSystem.Models.ViewModels.ForgotPasswordViewModel

<h3>Forgot Password</h3>

<form asp-action="ForgotPassword" method="post">
    <input asp-for="Email" class="form-control mb-3" placeholder="Enter your email" />
    <button class="btn btn-success">Submit</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}
